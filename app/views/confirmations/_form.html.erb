<%= form_with(model: confirmation, local: true) do |form| %>
  <% if confirmation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(confirmation.errors.count, "error") %> prohibited this confirmation from being saved:</h2>

      <ul>
      <% confirmation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label>Digite o seu nome completo:</label>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <label>Digite a quantidade de pessoas que vão ao casamento (incluindo você)</label>
    <%= form.text_field :quantity %>
  </div>

  <div class="field">
    <label>Digite o seu telefone (se desejar)</label>
    <%= form.text_field :telephone %>
  </div>

  <div class="actions">
    <%= form.submit "Confirmar presença"%>
  </div>
<% end %>
